@model IEnumerable<VidlyPractice.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>
@{
    if (Model == null)
    {
        <p>Model is null</p>
        return;
    }

    if (!Model.Any())
    {
        <p>There is no movie available to show</p>
        return;
    }
}

<table class="table table-bordered table-striped table-condensed table-responsive">
    <thead>
    <tr>
        <td>Movie</td>
        <td>Genre</td>
    </tr>
    </thead>
       
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Detail", "Movie", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>
</table>
