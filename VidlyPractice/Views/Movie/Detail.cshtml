@model VidlyPractice.Models.Movie

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<br/>
<ul>
    @{
        if (Model.Genre.Name != null)
        {
            <li>Genre: @Model.Genre.Name</li>
        }

        if (Model.ReleaseDate != null)
        {
            <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
        }

        if (Model.DateAdded != null)
        {
            <li>Date Added: @Model.DateAdded.Value.ToString("U")</li>            
        }

        if (Model.NumberInStock != null)
        {
            <li>Number in Stock: @Model.NumberInStock</li>            
        }

    }
</ul>
