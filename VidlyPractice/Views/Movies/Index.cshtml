@model IEnumerable<VidlyPractice.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>
<br/>
@Html.ActionLink("Add New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
<br/>
<br/>
@{
    if (Model == null)
    {
        <p>Model is null</p>
        return;
    }

    if (!Model.Any())
    {
        <p>There is no movie available to show</p>
        return;
    }
}


<table class="table table-bordered table-striped table-condensed table-responsive">
    <thead>
    <tr>
        <td>Id</td>
        <td>Movie</td>
        <td>Genre</td>
        <td>Release Date</td>
        <td>Date Added</td>
        <td>Number in Stock</td>
    </tr>
    </thead>
       
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Id</td>
            <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
            <td>
                @if (movie.ReleaseDate != null)
                {
                    @movie.ReleaseDate.Value.ToString("yyyy MMMM dd")
                }
            </td>
            <td>
                @if (movie.DateAdded != null)
                {
                    @movie.DateAdded.Value.ToString("yyyy MMMM dd")
                }
            </td>
            <td>@movie.NumberInStock</td>
        </tr>

    }
    </tbody>
</table>
